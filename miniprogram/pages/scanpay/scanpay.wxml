<!--miniprogram/pages/scanpay/scanpay.wxml-->
<view class="withdrawBox">
  <view class="withdrawHeader">
    <text>支付金额</text>
  </view>
  <view class="withdrawContent">
    <text class="withdrawContextText">￥</text>
    <input bindinput="setPayAmount" class="withdrawContextInput" placeholder-class="withdrawContextInputPlaceholder" type="number" placeholder="输入支付金额"></input>
  </view>
</view>

<button class="next" bindtap="nextStep">确认</button>


