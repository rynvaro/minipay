page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #F6F6F6;
}

.header {
    width: 100%;
    height: 300rpx;
    background-color: white;
    display: flex;
}

.headerR {
    width: 50%;
    height: 100%;
