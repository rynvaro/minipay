    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.couponBox {
    width: 300rpx;
    height: 90%;
    background: radial-gradient(circle at 5rpx 80%, transparent 15rpx, #FF6610 6rpx) top left, linear-gradient(0.25turn, #FF6610, #FF3306), radial-gradient(circle at 30rpx 80%, transparent 15rpx, #FF3306 6rpx) bottom right;
    /* 三段 宽x高 */
    background-size: 35rpx 100%, 250rpx 100%, 35rpx 100%;
    background-repeat: no-repeat;
    /* 三段 坐标 */
    background-position: 0rpx 0rpx,35rpx 0rpx,270rpx 0rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.couponBoxU{
    height: 60%;
    width: 100%;
    display: flex;
}

.couponBoxUVIP {
    color: white;
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 900;
}

.couponBoxUL {
    width: 60%;
    height: 100%;
    font-size: 180rpx;
    line-height: 120rpx;
    color: white;
    font-weight: 900;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}


.couponBoxUR {
    width: 40%;
    height: 100%;
    font-weight: bold;
    font-size: 60rpx;
    line-height: 60rpx;
    display: flex;
    align-items: flex-end;
    color: white;
}

.couponBoxD{
    height: 40%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
