/* miniprogram/pages/map/map.wxss */

.map {
    width: 100%;
    height: 1000rpx;
}



.backButton {
    height: 80rpx;
    width: 80rpx;
    border-radius: 200rpx;
    position: absolute;
    left: 20rpx;
    top: 60rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #999999;
    box-shadow: 0rpx 20rpx 20rpx 0rpx #808080;
}

.leftArrow {
    width: 20rpx;
    height: 20rpx;
    border-bottom: 5rpx solid black;
    border-left: 5rpx solid black;
    transform: rotate(45deg);
}

.backButtonImage {
    width: 36rpx;
    height: 36rpx;
}

.searchButton {
    height: 80rpx;
    width: 80rpx;
    border-radius: 200rpx;
    position: absolute;
    right: 20rpx;
    top: 120rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #999999;
    box-shadow: 0rpx 20rpx 20rpx 0rpx #808080;
}

.msgButton {
    height: 80rpx;
    width: 80rpx;
    border-radius: 200rpx;
    position: absolute;
    left: 20rpx;
    bottom: 50rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #999999;
    box-shadow: 0rpx 20rpx 20rpx 0rpx #808080;
}

.locationButton {
    height: 80rpx;
    width: 80rpx;
    border-radius: 200rpx;
    position: absolute;
    right: 20rpx;
    bottom: 50rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #999999;
    box-shadow: 0rpx 20rpx 20rpx 0rpx #808080;
}

.mapText {
    width: 100%;
    height: 350rpx;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    background-color: white;
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mapTextHeader {
    height: 90rpx;
    padding-left: 80rpx;
    margin-top: 10rpx;
    font-weight: bold;
    width: 100%;
    display: flex;
    align-items: center;
}

.mapTextAddress {
    font-size: small;
    color: #999999;
    padding-left: 80rpx;
    margin-top: 10rpx;
    width: 100%;
    display: flex;
}

.mapTextButton {
    margin-top: 45rpx;
    width: 400rpx;
    height: 70rpx;
    background-color: #FF6610;
    color: white;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}