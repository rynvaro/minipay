<!--miniprogram/pages/console/store/store.wxml-->

<view class="header">
    <view class="headerIcon" src="../../../images/home.png">
        <image class="settingItemTitleImageTakePhotoUIcon" src="../../../images/home.png"></image>
    </view>
</view>

<view class="settingsBox">
    <view class="settings">
        <view class="settingItem">
            <text class="settingItemL">店铺门头</text>

            <image wx:if="{{data.storeImage}}" class="settingItemTitleImage" src="{{data.storeImage}}" bindtap="select"></image>
            <view wx:else class="settingItemTitleImage" bindtap="select">
                <view class="settingItemTitleImageTakePhoto">
                    <view class="settingItemTitleImageTakePhotoU">
                        <image class="settingItemTitleImageTakePhotoUIcon" src="../../../images/orderhis.png"></image>
                    </view>
                    <view class="settingItemTitleImageTakePhotoD">
                        <text class="settingItemTitleImageTakePhotoDText">点击上传</text>
                    </view>
                </view>
            </view>

        </view>

         <view class="settingItem">
            <text class="settingItemL">店铺名称</text>
            <input bindinput="setStoreName" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.storeName}}"></input>
        </view>

        <view class="settingItem">
            <text class="settingItemL">商家信息</text>
            <input bindinput="setMerchantInfo" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.merchantInfo}}"></input>
        </view>
        <view class="settingItem">
            <text class="settingItemL">真实姓名</text>
            <input bindinput="setRealName" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.realName}}"></input>
        </view>

        <view class="settingItem">
            <text class="settingItemL">银行卡号</text>
            <input bindinput="setCardNumber" type="number" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.cardNumber}}"></input>
        </view>

        <view class="settingItem">
            <text class="settingItemL">电话</text>
            <input bindinput="setPhone" disabled="true" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.phone}}"></input>
        </view>

        <view class="settingItem">
            <text class="settingItemL">地址</text>
            <!-- <input class="settingItemR" placeholder-class="settingItemRPlaceHolder"></input> -->
            <view class="settingItemR" bindtap="selectLocation">{{data.location.address}}</view>
        </view>

        <view class="settingItem">
            <text class="settingItemL">营业时间</text>
            <input bindinput="setSETime" class="settingItemR" placeholder-class="settingItemRPlaceHolder" value="{{data.seTime}}"></input>
        </view>

        <view class="settingItem">
            <text class="settingItemL">产品详情</text>

            <image wx:if="{{data.productImage}}" class="settingItemTitleImage" src="{{data.productImage}}" bindtap="selectProductImage"></image>

            <view wx:else class="settingItemTitleImage" bindtap="selectProductImage">
                <view class="settingItemTitleImageTakePhoto">
                    <view class="settingItemTitleImageTakePhotoU">
                        <image class="settingItemTitleImageTakePhotoUIcon" src="../../../images/orderhis.png"></image>
                    </view>
                    <view class="settingItemTitleImageTakePhotoD">
                        <text class="settingItemTitleImageTakePhotoDText">点击上传</text>
                    </view>
                </view>
            </view>
        </view>

    </view>
</view>

<button class="publish" bindtap="publish">立即发布</button>