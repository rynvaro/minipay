/* miniprogram/pages/console/orderDetail/orderDetail.wxss */

page {
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
}

.detailHeader {
  width: 100%;
  height: 300rpx;
  background-color: white;
  display: flex;
}

.detailHeaderLImage {
  height: 250rpx;
  width: 250rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
}

.detailHeaderRText {
  font-size: large;
  font-weight: bold;
  margin-top: 100rpx;
  margin-left: 25rpx;
}

.detailItemBox {
  width: 100%;
  margin-top: 20rpx;
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
}

.detailItem {
  margin-top: 10rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  background-color: white;
}

.detailItemKey {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}

.detailItemValue {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 50rpx;
}

.totalIncome {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  background-color: white;
  display: flex;
}

.totalIncomeKey {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}

.totalIncomeValue {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 50rpx;
  font-size: large;
  color: red;
}