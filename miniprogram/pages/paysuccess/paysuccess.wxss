/* miniprogram/pages/paysuccess/paysuccess.wxss */

page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #F6F6F6;
}


.bar {
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
    background-color: #F6F6F6;
}

.navBar {
    width: 90%;
    display: flex;
    align-items: center;
    background-color: #F6F6F6;
}

.navBarTitleSuc {
    margin-left: 160rpx;
    font-size: small;
}

.leftArrow {
    margin-left: 10rpx;
    width: 20rpx;
    height: 20rpx;
    border-bottom: 3rpx solid black;
    border-left: 3rpx solid black;
    transform: rotate(45deg);
    background-color: #F6F6F6;
  }


.navBarTitle {
    margin-left: 20rpx;
    font-size: small;
    color: black;
}

.payDetail {
    width: 70%;
    height: 300rpx;
    display: flex;
}

.payDetailL {
    width: 70%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.payTips {
    color: #F56613;
    font-size: large;
    margin-top: 30rpx;
}

.pointexp {
    width: 100%;
    display: flex;
    align-items: center;
    font-size: large;
}

.pointTips {
    color: #F56613;
}

.expTips {
    color: #F56613;
    margin-left: 20rpx;
}

.vipTips {
    color: #F56613;
}

.payDetailR {
    width: 30%;
    height: 100%;
    display: flex;
    align-items: center;
}

.paySuc {
    position: relative;
    width: 224rpx;
    height: 200rpx;
    z-index: 1;
}

.paySucText {
    width: 90%;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    color: #F56613;
}

.detailItem {
    margin-top: 5rpx;
    width: 100%;
    height: 50rpx;
    display: flex;
    background-color: #fff;
    color: #F56613;
}
  
  .detailItemKey {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 50rpx;
  }
  
  .detailItemValue {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-right: 50rpx;
  }

.tips {
    margin-top: 30rpx;
    width: 90%;
    color: #F56613;
    /* background-color: #f59056; */
    border-radius: 20rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    border: 1rpx solid #f59056;
    /* box-shadow: 0rpx 5rpx 5rpx 0rpx #f59056; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.order {
    margin-top: 50rpx;
    color: white;
    border-radius: 20rpx;
    border: 1rpx solid #F56613;
    background-color: #F56613;
    width: 280rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: large;
}

.couponBox {
    margin-top: 20rpx;
    width: 95%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.couponTitle {
    font-size: small;
    color: #F56613;
}

.coupon {
    margin-top: 20rpx;
    width: 90%;
    height: 60rpx;
    background: linear-gradient(to bottom left, #FEEE00, #FD6D06);
    border-radius: 10rpx;
    display: flex;
}

.couponL {
    width: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: small;
}

.couponR {
    width: 30%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    background-color: red;
}