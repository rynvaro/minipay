/* miniprogram/pages/paysuccess/paysuccess.wxss */

page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #F56613;
}


.bar {
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
    background-color: #F56613;
}

.navBar {
    width: 90%;
    display: flex;
    align-items: center;
    background-color: #F56613;
}

.leftArrow {
    margin-left: 10rpx;
    width: 20rpx;
    height: 20rpx;
    border-bottom: 3rpx solid white;
    border-left: 3rpx solid white;
    transform: rotate(45deg);
    background-color: #F56613;
  }


.navBarTitle {
    margin-left: 20rpx;
    font-size: small;
    color: white;
}

.payDetail {
    width: 70%;
    height: 300rpx;
    display: flex;
}

.payDetailL {
    width: 70%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.payTips {
    color: white;
    font-size: small;
    margin-top: 30rpx;
}

.pointexp {
    width: 100%;
    display: flex;
    align-items: center;
}

.pointTips {
    color: white;
    font-size: small;
}

.expTips {
    color: white;
    font-size: small;
    margin-left: 20rpx;
}

.vipTips {
    color: white;
    font-size: small;
}

.payDetailR {
    width: 30%;
    height: 100%;
    display: flex;
    align-items: center;
}

.paySuc {
    position: relative;
    width: 112rpx;
    height: 100rpx;
    z-index: 1;
}

.sucText {
    color: rgb(255, 255, 255);
    font-size: large;
}

.order {
    color: white;
    border-radius: 20rpx;
    border: 1rpx solid white;
    width: 180rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: small;
}