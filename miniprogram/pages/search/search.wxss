/* miniprogram/pages/search/search.wxss */


page {
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* search box */
.search {
  width: 95%;
  background-color: #EEEEEE;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
}

.searchIconBox {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchIcon {
  width: 40rpx;
  height: 40rpx;
}

.searchInput {
  width: 85%;
  height: 100%;
}

.hotSearch {
  width: 95%;
  display: flex;
  flex-direction: column;
}

.hotSearchHeader {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  color: #999999;
}

.hostSearchBox {
  display: flex;
  flex-wrap: wrap;
}

.hotSearchItem {
  background-color: #EEEEEE;
  padding: 10rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  color: #999999;
}