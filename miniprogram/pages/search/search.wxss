/* miniprogram/pages/search/search.wxss */

page {
    background:#F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .search-container {
    height: 80rpx;
    display: flex;
    justify-content: center;
    z-index: 9;
  }
  
  .search-bg {
    position: fixed;
    height: 110rpx;
    width: 100%;
    display: flex;
    background: #fff;
    justify-content: center;
  }
  
  .searchicon {
    position: fixed;
    z-index: 11;
    padding-top: 25rpx;
    opacity: 0.7;
    left: 170rpx;
  }
  
  .searchicon-focus {
    display: none
  }
  
  .search {
    position: fixed;
    top: 0rpx;
    height: 70rpx;
    width: 690rpx;
    box-shadow: 0rpx 4rpx 16rpx #e9e9e9;
    border-radius: 10rpx;
    margin-top: 1rpx;
    background: #fff;
    z-index: 10;
    padding-left: 20rpx;
  }
  
  .search-placeholder {
    height: 40rpx;
    font-size: 28rpx;
    color: #999999;
    font-style: '苹方-简 常规体';
    display: flex;
    justify-content: center;
  }
  
  
  /* 推荐区 */
  
  .rec{
    margin-top: 10rpx;
    width: 100%;
    background-color: white;
    border-radius: 20rpx;
  }
  
  .rec-tab{
    width: 100%;
    height: 120rpx;
    display: flex;
  }
  
  .rec-tab-item {
    margin-top: 20rpx;
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .rec-tab-text-left {
    width: 100%;
    text-align: center;
    color: #206e47;
  }
  
  .rec-tab-text-right {
    width: 100%;
    text-align: center;
    color: #999999;
  }
  
  .rec-list {
    width: 730rpx;
    border-radius: 20rpx;
    margin-left: 10rpx;
  }
  
  .rec-list-item {
    width: 100%;
    height: 160rpx;
    border: 1rpx solid #999999;
    margin-top: 10rpx;
    border-radius: 20rpx;
    display: flex;
  }
  
  .rec-list-item-left{
    height: 100%;
    width: 160rpx;
    border-radius: 20rpx;
  }
  
  .rec-list-item-right{
    height: 100%;
    width: 550rpx;
    margin-left: 20rpx;
    /* border-radius: 20rpx; */
    display: flex;
    flex-direction: column;
  }
  
  .rec-list-item-right-1{
    width: 100%;
    height: 25%;
  }
  
  .rec-list-item-right-2{
    width: 100%;
    height: 25%;
  }
  
  .rec-list-item-right-2-desc{
    display: block;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    font-size: small;
  }
  
  .rec-list-item-right-3{
    width: 100%;
    height: 25%;
    display: flex;
  }
  
  .rec-list-item-right-3-l{
    height: 100%;
    width: 170rpx;
    display: flex;
    font-size: small;
  }
  
  .rec-list-item-right-3-m{
    height: 100%;
    width: 150rpx;
    display: flex;
    font-size: small;
    color: red;
  }
  
  .rec-list-item-right-3-r{
    height: 100%;
    width: 200rpx;
    color: #999999;
    text-align: right;
    color: red;
  }
  
  .rec-list-item-right-4{
    width: 100%;
    height: 25%;
    display: flex;
  }
  
  .rec-list-item-right-4-l{
    height: 100%;
    width: 320rpx;
    display: flex;
  }
  
  .rec-list-item-right-4-l-text{
    font-size: 20rpx;
    color: #999999;
    display: block;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    margin-top: 10rpx;
  }
  
  .rec-list-item-right-4-r{
    height: 100%;
    width: 200rpx;
    text-align: right;
    font-size: 20rpx;
    margin-top: 10rpx;
    color: #999999;
  }