/* miniprogram/pages/search/search.wxss */


page {
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* search box */
.orderSearch {
  width: 95%;
  background-color: #ffffff;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
}

.orderSearchIconBox {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.orderSearchIcon {
  width: 40rpx;
  height: 40rpx;
}

.orderSearchInput {
  width: 85%;
  height: 100%;
}

/* tabs */
.orderTabs {
  display: flex;
  height: 70rpx;
  width: 90%;
  justify-content: space-around;
  align-items: center;
  font-size: small;
  color: #999999;
}

/* order list */
.merchants {
  width: 90%;
  border-radius: 20rpx;
  background-color: #F6F6F6;
}

.merchant {
  margin-top: 20rpx;
  width: 100%;
  height: 250rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
}

.merchantL {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}

.merchantLImage {
  width:200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.merchantR {
  width: 60%;
  display: flex;
  align-items: center;
}

.merchantRBox {
  width: 100%;
  height: fit-content;
  display: flex;
  flex-direction: column;
}

.merchantRText1 {
  font-size: large;
  font-weight: bold;
}

.merchantRText2 {
  color: #999999;
  font-size: 25rpx;
}

.merchantRText3 {
  width: 100%;
  display: flex;
  font-size: 25rpx;
  color: #999999;
}

.merchantRText3Item {
  width: 33%;
}

.merchantRText3ItemLocation {
  width: 30%;
  display: flex;
  justify-content: flex-end;
}

.merchantRText4 {
  font-size: 25rpx;
  color: #999999;
}

.merchantRText5 {
  color: #FF6610;
  border: 5rpx solid #FFC29A;
  border-radius: 10rpx;
  width: fit-content;
  padding: 3rpx;
  font-size: small;
}

