/* miniprogram/pages/search/search.wxss */


page {
  background-color: #F6F6F6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* search box */
.search {
  width: 95%;
  background-color: #EEEEEE;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
}

.searchIconBox {
  width: 15%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchIcon {
  width: 40rpx;
  height: 40rpx;
}

.searchInput {
  width: 85%;
  height: 100%;
}

.hotSearch {
  width: 95%;
  display: flex;
  flex-direction: column;
}

.hotSearchHeader {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  color: #999999;
}

.hostSearchBox {
  display: flex;
  flex-wrap: wrap;
}

.hotSearchItem {
  background-color: #EEEEEE;
  padding: 10rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  color: #999999;
}

.stores {
  width: 90%;
  border-radius: 20rpx;
  background-color: #F6F6F6;
}

.store {
  margin-top: 20rpx;
  width: 100%;
  height: 250rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
}

.storeL {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}

.storeLImage {
  width:200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.storeR {
  width: 60%;
  display: flex;
  align-items: center;
}

.storeRBox {
  width: 100%;
  height: fit-content;
  display: flex;
  flex-direction: column;
}


.storeRText2 {
  color: #999999;
  font-size: 25rpx;
}

.storeRText3 {
  width: 100%;
  display: flex;
  font-size: 25rpx;
  color: #999999;
}

.storeRText3Item {
  width: 33%;
}

.storeRText3ItemLocation {
  width: 30%;
  display: flex;
  justify-content: flex-end;
}

.storeRText4 {
  font-size: 25rpx;
  color: #999999;
}

.viprights {
  margin-top: 5rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
  z-index: 0;
}

.viprightsTinyBox {
    height: 50rpx;
    width: 50rpx;
    z-index: 0;
}

.viprightsTinyBoxU {
    height: 50%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.viprightsTinyBoxUIcon {
    height: 35rpx;
    width: 35rpx;
}

.viprightsTinyBoxD {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
}

.viprightsBGLine {
  position: absolute;
  top: 10rpx;
  width: 95%;
  height: 5rpx;
  background-color: #EEEEEE;
  z-index: -1;
}

.storeRText5 {
  color: #FF7B1C;
  border: 2rpx solid #fc6f0b;
  border-radius: 10rpx;
  width: fit-content;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 15rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
