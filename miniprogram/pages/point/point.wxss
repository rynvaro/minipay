/* miniprogram/pages/point/point.wxss */

page {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #F6F6F6;
}

.bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
}

.navBar {
    width: 90%;
    display: flex;
    align-items: center;
}

.leftArrow {
    margin-top: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-bottom: 5rpx solid white;
    border-left: 5rpx solid white;
    transform: rotate(45deg);
  }


.navBarTitle {
    margin-left: 20rpx;
    font-size: small;
    color: white;
}

.tipsBox {
    position: absolute;
    top: 200rpx;
    right: 250rpx;
    font-size: small;
    color: #FF6A11;
    background-color: white;
    border-radius: 20rpx;
    height: 180rpx;
    width: 380rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 1rpx 10rpx 50rpx 0rpx #FFA74F;
    padding: 10rpx;
}

.tipsBoxClose {
    width: 30rpx;
    height: 30rpx;
    color: red;
    border: 2rpx double #FFA74F;
    border-radius: 20rpx;
    font-size: 25rpx;
    position: absolute;
    top: -30rpx;
    right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
}

.header {
    position: relative;
    width: 100%;
    height: 450rpx;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
    z-index: 0;
    background-color: tomato;
}

.headerBG {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    z-index: -1;
}



.hLine {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.hLine1 {
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
}

.hLine1Icon {
    height: 100rpx;
    width: 100rpx;
    border-radius: 200rpx;
}

.hLine1Text {
    margin-top: 20rpx;
}

.hLine3 {
    margin-top: 10rpx;
    width: 100%;
    height: 30%;
    display: flex;
}

.hLine3ExperienceText {
    color: white;
    width: 60%;
    display: flex;
    justify-content: flex-end;
}

.tips {
    width: 40%;
    width: 100rpx;
    display: flex;
    justify-content: center;
}

.tipsContent {
    height: 20rpx;
    width: 20rpx;
    background-color: white;
    border-radius: 20rpx;
    font-size: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #FF6610;
}

.history {
    margin-top: -60rpx;
    background-color: white;
    width: 92%;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 0;
}

.historyItem {
    width: 90%;
    height: 120rpx;
    margin-top: 20rpx;
}

.historyItemU {
    height: 95%;
    display: flex;
}

.historyItemUL {
    width: 70%;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    justify-content: flex-end;
    margin-bottom: 10rpx;
}

.historyItemULText {
    color: #999999;
}

.historyItemULTime {
    font-size: 25rpx;
    color: #999999;
}

.historyItemUR {
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: #FF7920;
}

.historyItemD {
    height: 5rpx;
    background: linear-gradient(to right,#E6E6E6, #fdfdfd);
}
