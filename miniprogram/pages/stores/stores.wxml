<!--miniprogram/pages/stores/stores.wxml-->

<view class="tabs">
    <view class="tab">
        <text class="tabText" style="color: {{tabColors[0]}}; font-size: {{tabFontSizes[0]}}" bindtap="onTabClick" data-id="0">热门商家</text>
        <view class="tabUnderLine" hidden="{{!tabSelected[0]}}"></view>
    </view>
    <view class="tab">
        <text class="tabText" style="color: {{tabColors[1]}}; font-size: {{tabFontSizes[1]}}" bindtap="onTabClick" data-id="1">人气商家</text>
        <view class="tabUnderLine" hidden="{{!tabSelected[1]}}"></view>
    </view>
    <view class="tab">
        <text class="tabText" style="color: {{tabColors[2]}}; font-size: {{tabFontSizes[2]}}" bindtap="onTabClick" data-id="2">附近商家</text>
        <view class="tabUnderLine" hidden="{{!tabSelected[2]}}"></view>
    </view>
</view>

<view class="stores">

    <view wx:for="{{stores}}" wx:key="id" class="store" bindtap="store">
        <view class="storeL">
            <image class="storeLImage" src="{{item.productImage}}"></image>
        </view>
        <view class="storeR">
            <view class="storeRBox">
                <text class="storeRText1">{{item.storeName}}</text>
                <view class="storeRText3">
                    <text class="storeRText3Item">{{item.storeType}}</text>
                    <text class="storeRText3Item">人均¥{{item.price}}</text>
                    <text class="storeRText3ItemLocation">{{item.distance}}</text>
                </view>
                <text class="storeRText4">营业时间 {{item.seTime}}</text>
                <view class="viprights">
                    <view class="viprightsTinyBox">
                        <view class="viprightsTinyBoxU">
                            <image wx:if="{{vipLevel == 1}}" class="viprightsTinyBoxUIcon" src="../../images/v1StarFilled.png"></image>
                            <image wx:else class="viprightsTinyBoxUIcon" src="../../images/v1Star.png"></image>
                        </view>
                        <text class="viprightsTinyBoxD">95折</text>
                    </view>
                    <view class="viprightsTinyBox">
                        <view class="viprightsTinyBoxU">
                            <image wx:if="{{vipLevel == 2}}" class="viprightsTinyBoxUIcon" src="../../images/v2StarFilled.png"></image>
                            <image wx:else class="viprightsTinyBoxUIcon" src="../../images/v2Star.png"></image>
                        </view>
                        <text class="viprightsTinyBoxD">9折</text>
                    </view>
                    <view class="viprightsTinyBox">
                        <view class="viprightsTinyBoxU">
                            <image wx:if="{{vipLevel == 3}}" class="viprightsTinyBoxUIcon" src="../../images/v3StarFilled.png"></image>
                            <image wx:else class="viprightsTinyBoxUIcon" src="../../images/v3Star.png"></image>
                        </view>
                        <text class="viprightsTinyBoxD">8折</text>
                    </view>
                    <view class="viprightsBGLine"></view>
                </view>
                <text class="storeRText5">当前为V{{vipLevel}}会会员，享{{vipDiscount}}买单</text>
            </view>
        </view>
    </view>

</view>

