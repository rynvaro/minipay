/* miniprogram/pages/orderDetail/orderDetail.wxss */


page {
    background-color: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .detailHeader {
    width: 100%;
    height: 300rpx;
    background-color: white;
    display: flex;
  }
  
  .detailHeaderLImage {
    height: 250rpx;
    width: 250rpx;
    margin-top: 25rpx;
    margin-left: 25rpx;
  }
  
  .detailHeaderRText {
    font-size: large;
    font-weight: bold;
    margin-top: 100rpx;
    margin-left: 25rpx;
  }
  
  .detailItemBox {
    width: 100%;
    margin-top: 20rpx;
    background-color: #F6F6F6;
    display: flex;
    flex-direction: column;
  }
  
  .detailItem {
    margin-top: 10rpx;
    width: 100%;
    height: 90rpx;
    display: flex;
    background-color: white;
  }
  
  .detailItemKey {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 50rpx;
  }
  
  .detailItemValue {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin-right: 50rpx;
  }

  .paymentInput {
    width: 180rpx;
    height: 75%;
    border: 5rpx solid #FE8633;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    color: #FE8633;
  }

  .paymentText {
    margin-left: 10rpx;
    height: 100%;
    display: flex;
    align-items: flex-end;
  }
  
  
  .totalIncome {
    width: 100%;
    height: 90rpx;
    position: absolute;
    bottom: 0;
    background-color: white;
    display: flex;
  }
  
  .totalIncomeKey {
    width: 70%;
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 50rpx;
  }
  
  .totalIncomeValue {
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: large;
    color: red;
  }

  .totalIncomePayButton {
    width: 30%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: large;
    color: white;
    background-color: #FF6610;
  }

  .popBoxLin5 {
    margin-top: 10rpx;
    width: 90%;
    height: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .payby {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .paybyItem {
    margin-left: 20rpx;
  }