/* miniprogram/pages/indexpage/indexpage.wxss */

page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.box {
  position: absolute;
  top: 360rpx;
  left: 10%;
  width: 80%;
  height: 350rpx;
  background-color: white;
  box-shadow: 0 10rpx 10rpx 0 #999999;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.boxTitle {
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-weight: bold;
}

.boxContent {
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.boxBtns {
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boxBtnL {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boxBtnR {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hbt {
  position: fixed;
  top: 0;
  height: 100% !important;
  width: 100% !important;
  background-color: transparent;
  opacity: 0.5;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner {
    width: 98%;
    height: 300rpx;
    border-radius: 20rpx;
}

.bannerItem {
    height: 100%;
    width: 100%;
    border-radius: 20rpx;
}

/* stores */
.stores {
    width: 95%;
    border-radius: 20rpx;
    background-color: #F6F6F6;
  }
  
  .store {
    margin-top: 20rpx;
    width: 100%;
    height: 200rpx;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
  }
  
  .storeL {
    width: 30%;
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  .storeLImage {
    width:150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
  }
  
  .storeR {
    width: 70%;
    display: flex;
    align-items: center;
  }
  
  .storeRBox {
    width: 100%;
    height: fit-content;
    display: flex;
    flex-direction: column;
  }
  
  .storeRText1 {
      display: block;
      white-space:nowrap;
      overflow:hidden;
      text-overflow:ellipsis;
  }
  
  .storeRText2 {
    color: #999999;
    font-size: 25rpx;
  }
  
  .storeRText3 {
    width: 100%;
    display: flex;
    font-size: 25rpx;
    color: #999999;
  }
  
  .storeRText3Item {
    display: block;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    color: #999999;
    font-size: 25rpx;
  }
  
  .storeRText3ItemLocation {
    width: 40%;
    display: flex;
    justify-content: flex-end;
    margin-right: 20rpx;
  }
  
  .storeRText4 {
    font-size: 25rpx;
    color: #999999;
  }

  .storeRText5 {
    font-size: 20rpx;
    display: flex;
    align-items: center;
}

.percent {
    font-size: 45rpx;
    color: red;
    font-style: italic;
}

.storeRText5End {
    font-size: 18rpx;
    color: #999999;
}

.end {
    width: 100%;
    height: 120rpx;
}

.footer {
    width: 100%;
    height: 120rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    background-color: #F6F6F6;
}

.footerL {
    width: 30%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.img {
    height: 40rpx;
    width: 40rpx;
}

.footerLU {
    width: 100%;
    height: 60%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.footerLD {
    width: 100%;
    height: 40%;
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    color: #999999;
}

.footerM {
    position: relative;
    width: 60%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.scanTips {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
    background-color: #F7D75E;
    font-size: 20rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
}

.scanButton {
    width: 80%;
    height: 70%;
    background-color: #FF5E00;
    border-radius: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
}

.footerR {
    width: 30%;
    height: 100%;
}

.footerRU {
    width: 100%;
    height: 60%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.footerRD {
    width: 100%;
    height: 40%;
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    color: #999999;
}