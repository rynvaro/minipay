/**index.wxss**/

page {
  background:#F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navigation {
  background-color: white;
  height: 120rpx;
  width: 100%;
  display: flex;
}

.navigation-text {
  margin-top: 65rpx;
  margin-left: 25rpx;
}



.container {
  width: 690rpx;
  border-radius: 20rpx;
  display: flex;
}

.card {
  width: 100%;
  height: 345rpx;
  background-color: #F20303;
  border-radius: 20rpx;
}

/* assets */
.assets {
  margin-top: 20rpx;
  height: 150rpx;
  width: 100%;
  border-radius: 20rpx;
  display: flex;
}

.assets-item-deposit {
  width: 220rpx;
  height: 100%;
}

.assets-item-ticket {
  width: 220rpx;
  height: 100%;
  margin-left: 15rpx;
}

.assets-item-remaining {
  width: 220rpx;
  height: 100%;
  margin-left: 15rpx;
}

.assets-item-content {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.assets-item-content-up {
  width: 100%;
  height: 50%;
  /* background-color: wheat; */
  font-size: medium;
  margin-left: 20rpx;
  margin-top: 30rpx;
  font-weight: bold;
}

.assets-item-content-down {
  width: 100%;
  height: 50%;
  font-size: 25rpx;
  color: #C7C7C7;
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-weight: 300;
}

/* signin */

.signin{
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
}

.signin-u {
  width: 100%;
  height: 50%;
  display: flex;
}

.signin-ul {
  height: 100%;
  width: 50%;
  display: flex;
}

.signin-ul-text {
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

.signin-ur {
  width: 50%;
  display: flex;
  justify-content: flex-end;
}

.signin-ur-text {
  margin-top: 25rpx;
  margin-right: 15rpx;
  font-size: 25rpx;
  color: #C7C7C7;
}

.signin-d {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
}

.signin-d-view {
  background-color: #F6F6F6;
  width: 95%;
  height: 60rpx;
  border-radius: 20rpx;
  display: flex;
}

.signin-d-view-text {
  font-size: small;
  color: #565656;
  margin-top: 13rpx;
  margin-left: 20rpx;
}


/* more */
.more {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: white;
  margin-top: 20rpx;
}

.more-header {
  width: 100%;
  height: 25%;
  display: flex;
}

.more-header-text {
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.more-list {
  width: 100%;
  height: 75%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: white;
}

.more-list-line1 {
  width: 100%;
  height: 150rpx;
  display: flex;
}

.more-list-item-order {
  height: 150rpx;
  width: 150rpx;
}

.more-list-item-exchange {
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.more-list-item-point {
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.more-list-item-customer-service {
  height: 150rpx;
  width: 150rpx;
  margin-left: 30rpx;
}

.more-list-item-content {
  height: 100%;
  width: 100%;
}

.more-list-item-content-u{
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
}

.more-list-item-content-u-icon {
  width: 30rpx;
  height: 40rpx;
  margin-top: 30rpx;
}

.more-list-item-content-d{
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
}

.more-list-item-content-d-text{
  font-size: small;
  font-weight: 350;
}


