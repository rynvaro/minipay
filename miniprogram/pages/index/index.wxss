/**index.wxss**/

page {
  background:#F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card {
  width: 95%;
  height: 400rpx;
  background-color: #FF6610;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cardLine1 {
  width: 100%;
  height: 40%;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.cardLine1Icon {
  height: 120rpx;
  width: 120rpx;
  border-radius: 200rpx;
  z-index: 2;
}

.cardLine2 {
  width: 100%;
  height: 10%;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: small;
}

.cardLine3 {
  width: 60%;
  height: 20%;
  z-index: 2;
  font-size: xx-small;
  color: wheat;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cardLine3T {
  width: 40%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  z-index: 2;
}

.cardLine3V {
  width: 40%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  z-index: 2;
}

.cardLine3Arrow {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.cardLine4 {
  width: 90%;
  height: 20%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vipProgress {
  width: 120rpx;
  height: 5rpx;
  background-color: white;
  z-index: 3;
}

.vipIcon {
  height: 60rpx;
  width: 60rpx;
}

.cardLine5 {
  width: 100%;
  height: 10%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: small;
}

.vipText1 {
  width: 25%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vipText2 {
  width: 25%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vipText3 {
  width: 25%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vipText4 {
  width: 25%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}


.cardRightTriangle {
  width: 0;
  height: 0;
  border-bottom: 100rpx solid #FF510B; 
  border-left: 400rpx solid transparent;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 1;
}

.cardLeftTriangle {
  width: 0;
  height: 0;
  border-bottom: 150rpx solid #FF510B; 
  border-right: 400rpx solid transparent;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.cardTriangleAppendLine {
  width: 95%;
  height: 20rpx;
  background-color: #FF510B;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}


/* assets */
.assets {
  margin-top: 20rpx;
  height: 150rpx;
  width: 95%;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
}

.assetsItem {
  width: 30%;
  height: 100%;
}

.assets-item-content {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.assets-item-content-up {
  width: 100%;
  height: 50%;
  font-size: large;
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-weight: bold;
}

.assets-item-content-down {
  width: 100%;
  height: 50%;
  font-size: 25rpx;
  color: #C7C7C7;
  margin-left: 40rpx;
  margin-top: 10rpx;
  font-weight: 300;
}

/* scan signin */

.scanSignin {
  margin-top: 20rpx;
  width: 95%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}

.scanSigninItem {
  width: 340rpx;
  height: 100%;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.scanSigninItemU {
  width: 100%;
  height: 60%;
  font-size: large;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.scanSigninItemD {
  width: 100%;
  height: 40%;
  font-size: small;
  display: flex;
  margin-left: 30rpx;
  color: #999999;
}

/* more */
.more {
  width: 95%;
  border-radius: 20rpx;
  background-color: white;
  margin-top: 20rpx;
}

.moreHeader {
  height: 90rpx;
  margin-left: 30rpx;
  font-size: large;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.moreList {
  width: 100%;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}

.moreListItem {
  height: 150rpx;
  width: 150rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}

.moreListItemU {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.moreListItemUIcon {
  width: 36rpx;
  height: 48rpx;
  border-radius: 10rpx;
}

.moreListItemUIconPoint {
  width: 36rpx;
  height: 36rpx;
  border-radius: 10rpx;
}

.moreListItemD {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}

.popBox {
  width: 60%;
  margin-left: 20%;
  height: 500rpx;
  position: absolute;
  top: 350rpx;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  box-shadow: 1rpx 10rpx 50rpx 0rpx #999999;
}

.popBoxHeader {
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FF6610;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.wxlogo {
  width: 81rpx;
  height: 81rpx;
}

.popBoxContent {
  width: 100%;
  height: 70%;
  background-color: white;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.popBoxContentText {
  font-size: small;
  color: #999999;
}

.popBoxContentButton {
  margin-top: 60rpx;
  background-color: #FF540C;
  color: white;
}

.closeAdvice {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  color: white;
}