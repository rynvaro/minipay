  display: flex;
  flex-direction: column;
}

.options-item-content-icon {
  text-align: center;
  height: 100rpx;
  width: 100rpx;
  margin-left: 25rpx;
  background-color: #206e47;
  border-radius: 20rpx;
  border: 1rpx solid white;
}

.options-item-content-text{
  text-align: center;
  font-size: small;
  color: white;
}

