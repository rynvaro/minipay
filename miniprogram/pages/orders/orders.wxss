/* miniprogram/pages/orders/orders.wxss */

page {
    background-color: #F6F6F6;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* search box */
.orderSearch {
    width: 95%;
    background-color: #e4e6e6;
    height: 80rpx;
    border-radius: 20rpx;
    /* box-shadow: 0rpx 1rpx 30rpx 0rpx #999999; */
    display: flex;
}

.orderSearchIconBox {
    width: 15%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.orderSearchIcon {
    width: 40rpx;
    height: 40rpx;
}

.orderSearchInput {
    width: 85%;
    height: 100%;
}

/* tabs */
.orderTabs {
    display: flex;
    height: 70rpx;
    width: 90%;
    justify-content: space-around;
    align-items: center;
    font-size: small;
    color: #999999;
}

/* order list */
.orderBox {
    width: 90%;
    border-radius: 20rpx;
    background-color: #F6F6F6;
}

.orderBoxTime {
    margin-top: 10rpx;
    margin-left: 35rpx;
    font-size: small;
}

.orderList {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 20rpx;
}

.orderListItem {
    width: 100%;
    height: 220rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    display: flex;
    background-color: white;
}

.orderItemL {
    width: 25%;
    height: 100%;
}

.orderItemThumb {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.orderItemR {
    margin-top: 20rpx;
    width: 75%;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.orderItemHL {
    height: 50%;
    width: 100%;
    display: flex;
}

.orderItemTitle {
    width: 80%;
    font-size: large;
    font-weight: bold;
    display: flex;
}

.orderItemHLArrowBox {
    width: 20%;
    display: flex;
    justify-content: flex-end;
    margin-right: 10rpx;
}

.orderItemHLArrow {
    margin-top: 17rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: 5rpx solid #999999;
    border-right: 5rpx solid #999999;
    transform: rotate(45deg);
    margin-right: 20rpx;
}

.orderItemBL {
    height: 50%;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}

.orderItemBLText {
    color: #EC9B76;
    margin-right: 20rpx;
}