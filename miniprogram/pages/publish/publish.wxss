/* miniprogram/pages/publish/publish.wxss */

.container {
    width: 100%;
    background: #fff;
  }
  
  .box {
    width: 690rpx;
    background: #fff;
  }
  
  .picker {
    margin-left: 25rpx;
  }
  
  .title {
    font-size: 32rpx;
    margin-top: 26rpx;
    margin-bottom: 26rpx;
    padding-left: 8rpx;
  }
  
  .title-placeholder {
    font-size: 32rpx;
    color: #b3b3b3;
  }
  
  .line {
    height: 2rpx;
    width: 100%;
    background: #efefef;
  }
  
  .desc {
    margin-top: 40rpx;
    font-size: 32rpx;
  }
  
  .desc textarea {
    width: 100%;
  }
  
  .desc-placeholder {
    font-size: 32rpx;
    color: #b3b3b3;
  }
  
  .thumbnail-box {
    display: flex;    
    /* justify-content: center;     */
    flex-wrap: wrap;
    width: 100%;
  }
  
  /*每张图片所占容器*/
  .item {    
    position: relative;    
    margin:9rpx;
    width: 152rpx;
    height: 152rpx;
    /* border: 2rpx solid #dfdfdf; */
    border-radius: 10rpx;
  }
  .item image{
    width: 152rpx;
    height: 152rpx;
    border-radius: 10rpx;
  }
  /*add按钮*/
  .item .addIcon{
    position:relative;
    width:152rpx;
    height:152rpx;
    text-align:center;
    line-height:152rpx;
    font-size:80rpx;
    background: #f2f5f9;
    color: #B9BABD;
    border-radius: 10rpx;
  }
  /*删除按钮*/
  .delete {    
    position: absolute;
    top: 0;
    left: 0;
    height: 46rpx;
    width: 46rpx;
    line-height: 39rpx;
    background: #e7d10c;
    border-radius: 20px;
    transform: rotate(45deg);
    font-size: 46rpx;
    text-align: center;
  }
  
  .location {
    display: flex;
    background: #fff;
    width: 100%;
    height: 35px;
    align-items: center;
    position: relative;
  }
  
  .location-icon {
    padding-left: 5px;
  }
  
  .selectLocation {
    font-size: 9pt;
    color: rgb(82, 149, 194);
    margin-left: 5px;
    padding: 2px;
  }
  
  /* .is_completely_new {
    position: absolute;
    right: 0;
    color: rgb(135, 139, 141);
    margin-left: 5px;
    transform: scale(0.6);
  } */
  
  .split-line {
    margin-top: 120rpx;
    height: 20rpx;
    background: #f4f4f4;
  }
  
  .bottom {
    background: #fff;
    font-size: 32rpx;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .price {
    display: flex;
    padding: 30rpx 0rpx 28rpx 0rpx;
    width: 100%;
  }
  
  .price-title {
    font-size: 32rpx;
    color: #333333;
    line-height: 56rpx;
    display: flex;
    align-items: center;
  }
  
  .price input {
    margin-left: 10rpx;
    font-size: 32rpx;
    line-height: 56rpx;
    margin-top: 4rpx;
  }
  
  .confirm {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 94rpx;
    border-radius: 10rpx;
    margin-bottom: 26rpx;
    margin-top: 146rpx;
    font-size: 36rpx;
    color: #333333;
  }