/* miniprogram/pages/lottory/lottory.wxss */

page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.headerImage {
    width: 100%;
    height: 300rpx;
}

.footerImage {
    width: 100%;
    height: auto;
}

.temp {
    width: 95%;
    height: 80rpx;
    display: flex;
    color: #999999;
    font-size: small;
    justify-content: center;
    align-items: center;
}

.contact {
    background-color: #C35B49;
    height: 40rpx !important;
    width: 220rpx !important;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: small;
    color: white;
}

.lottoryTime {
    width: 60%;
    color: #999999;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.title {
    color: #7e7e7e;
}

.progress {
    margin-top: 20rpx;
    width: 90%;
}

.buttonBox {
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.buttonOut {
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    background-color: #F1D6D2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.buttonIn {
    width: 170rpx;
    height: 170rpx;
    border-radius: 200rpx;
    background-color: #C35B49;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: small;
}

.usersBox {
    width: 90%;
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: small;
    color: #999999;
}

.arrow {
    width: 12rpx;
    height: 12rpx;
    /* border-top: 4rpx solid #999999; */
    /* border-right: 4rpx solid #999999; */
    transform: rotate(45deg);
    margin-left: 20rpx;
}

.winBox {
    height: 120rpx;
    width: 90%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.icon {
    width: 80rpx;
    height: 80rpx;
    /* background-color: tan; */
    margin: 5rpx;
    border: 1rpx solid #dadada;
    border-radius: 10rpx;
}

.invite {
    width: 200rpx;
    height: 50rpx;
    border-radius: 20rpx;
    background-color: #C35B49;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: small;
}

.wonBox {
    margin-top: 50rpx;
    width: 100%;
    height: 220rpx;
    background-color: #F1F1F2;
}

.wonTitle {
    margin-top: 20rpx;
    margin-left: 20rpx;
    color: #999999;
    font-size: small;
}

.swiperBox {
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.swiper {
    width: 90%;
    height: 100rpx;
}

.item {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 10rpx;
    font-size: small;
    color: #999999;
}

.canvasBoxClose {
    width: 35rpx;
    height: 35rpx;
    color: red;
    border: 2rpx double #FFA74F;
    border-radius: 20rpx;
    font-size: 25rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
}

.canvasBox {
    width: 80%;
    height: auto;
    background-color: #F6F6F6;
    position: absolute;
    top: 50rpx;
    left: 10%;
    box-shadow: 0 0 10rpx 10rpx #cacaca;
    border-radius: 20rpx;
}

.shareTitle {
    height: 50rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shareTips {
    color: #999999;
}

.canvas {
    background-color: #F6F6F6;
    width: 100%;
    height: 1080rpx;
}