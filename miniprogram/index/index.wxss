/**index.wxss**/

page {
  background: #cecece;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.card {
  background-color: #206e47;
  width: 730rpx;
  height: 360rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 2rpx 10rpx rgb(126, 126, 126);
}


.card-first-line {
  width: 100%;
  height: 20%;
  display: flex;
}

.card-second-line {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
}

.card-third-line {
  width: 100%;
  height: 20%;
}

.card-second-line-top {
  width: 100%;
  height: 50%;
  display: flex;
}

.card-second-line-top-left{
  width: 40%;
  height: 100%;
  display: flex;
}


.card-user-avatar{
  width: 76rpx;
  height: 76rpx;
  border-radius: 10rpx;
  margin-left: 73rpx;
  margin-top: 15rpx;
}

.card-user-name {
  height: fit-content;
  margin-left: 20rpx;
  color :wheat;
  margin-top: 40rpx;
}

.card-second-line-top-right{
  width: 60%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.card-second-line-top-right-content{
  text-align: center;
  color: gold;
  margin-top: 20rpx;
  font-size: 40rpx;
  font-style: italic;
}

.card-second-line-bottom {
  width: 100%;
  height: 50%;
  display: flex;
}

.card-second-line-bottom-1{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.card-second-line-bottom-up{
  width: 100%;
  height: 60%;
  display: flex;
  justify-content: center;
}

.card-second-line-bottom-up-content {
  text-align: center;
  margin-top: 25rpx;
  color:red;
}

.card-second-line-bottom-down{
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: center;
}

.card-second-line-bottom-down-content{
  text-align: center;
  color: #999999;
  font-size: small;
}

.card-second-line-bottom-2{
  width: 40%;
  height: 100%;
}

.card-second-line-bottom-3{
  width: 30%;
  height: 100%;
}

.card-header-left {
  width: 50%;
  display: flex;
}
.card-header-right {
  width: 50%;
}

.card-logo {
  width: 46rpx;
  height: 46rpx;
  border-radius: 200rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.card-text{
  height: fit-content;
  margin-left: 20rpx;
  margin-top: 16rpx;
  font-size: 20rpx;
  color: wheat;
}

.card-text-right{
  height: fit-content;
  margin-right: 16rpx;
  margin-top: 10rpx;
  color: #999999;
  font-style: italic;
  float: right;
  font-size: 20rpx;
}


.card-number{
  color: white;
  float: right;
  margin-right: 20rpx;
  margin-top: 15rpx;
}


/* options 功能列表 */
.options {
  width: 730rpx;
  height: 180rpx;
  border: 1rpx solid #999999;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  justify-content: center;
  background-color: #206e47;
}

.options-item {
  height: 150rpx;
  width: 150rpx;
  margin: 20rpx 20rpx 20rpx 0rpx;
}

.options-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.options-item-content-icon {
  text-align: center;
  height: 100rpx;
  width: 100rpx;
  margin-left: 25rpx;
  background-color: #206e47;
  border-radius: 20rpx;
  border: 1rpx solid white;
}

.options-item-content-text{
  text-align: center;
  font-size: small;
  color: white;
}

/* 推荐区 */

.rec{
  margin-top: 10rpx;
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
}

.rec-tab{
  width: 100%;
  height: 120rpx;
  display: flex;
}

.rec-tab-item {
  margin-top: 20rpx;
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.rec-tab-text-left {
  width: 100%;
  text-align: center;
  color: #206e47;
}

.rec-tab-text-right {
  width: 100%;
  text-align: center;
  color: #999999;
}

.rec-list {
  width: 730rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
}

.rec-list-item {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #999999;
  margin-top: 10rpx;
  border-radius: 20rpx;
  display: flex;
}

.rec-list-item-left{
  height: 100%;
  width: 160rpx;
  border-radius: 20rpx;
}

.rec-list-item-right{
  height: 100%;
  width: 550rpx;
  margin-left: 20rpx;
  /* border-radius: 20rpx; */
  display: flex;
  flex-direction: column;
}

.rec-list-item-right-1{
  width: 100%;
  height: 25%;
}

.rec-list-item-right-2{
  width: 100%;
  height: 25%;
}

.rec-list-item-right-2-desc{
  display: block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  font-size: small;
}

.rec-list-item-right-3{
  width: 100%;
  height: 25%;
  display: flex;
}

.rec-list-item-right-3-l{
  height: 100%;
  width: 170rpx;
  display: flex;
  font-size: small;
}

.rec-list-item-right-3-m{
  height: 100%;
  width: 150rpx;
  display: flex;
  font-size: small;
  color: red;
}

.rec-list-item-right-3-r{
  height: 100%;
  width: 200rpx;
  color: #999999;
  text-align: right;
  color: red;
}

.rec-list-item-right-4{
  width: 100%;
  height: 25%;
  display: flex;
}

.rec-list-item-right-4-l{
  height: 100%;
  width: 320rpx;
  display: flex;
}

.rec-list-item-right-4-l-text{
  font-size: 20rpx;
  color: #999999;
  display: block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  margin-top: 10rpx;
}

.rec-list-item-right-4-r{
  height: 100%;
  width: 200rpx;
  text-align: right;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #999999;
}